# Railway Environment Variables for REJLERS Django Backend
# Copy this file to your Railway environment variables section
# DO NOT commit actual values to git!

# ===========================================
# DJANGO CORE SETTINGS
# ===========================================
SECRET_KEY=your-super-secret-django-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production

# ===========================================
# DATABASE (Railway PostgreSQL)
# ===========================================
# Railway automatically provides DATABASE_URL
# DATABASE_URL=postgresql://username:password@host:port/database
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=your-railway-db-host
DB_PORT=5432

# ===========================================
# REDIS CACHE (Railway Redis)
# ===========================================
# Railway automatically provides REDIS_URL if Redis is added
# REDIS_URL=redis://default:password@host:port

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=REJLERS <noreply@rejlers.com>
ADMIN_EMAIL=admin@rejlers.com

# ===========================================
# FRONTEND/CORS SETTINGS
# ===========================================
FRONTEND_URL=https://your-frontend-domain.vercel.app
BACKEND_URL=https://your-backend-domain.up.railway.app
ALLOWED_HOSTS=your-backend-domain.up.railway.app,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
USE_TLS=True

# ===========================================
# FILE STORAGE (Optional - for media files)
# ===========================================
# If using AWS S3 or similar for file storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# REJLERS BUSINESS SETTINGS
# ===========================================
COMPANY_NAME=REJLERS
COMPANY_EMAIL=contact@rejlers.com
COMPANY_PHONE=+1-XXX-XXX-XXXX
COMPANY_ADDRESS=Your Company Address

# ===========================================
# AI SERVICES - OPENAI CONFIGURATION
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_ORGANIZATION=your-openai-org-id-optional

# ===========================================
# API KEYS (if needed for integrations)
# ===========================================
# GOOGLE_API_KEY=your-google-api-key
# SENDGRID_API_KEY=your-sendgrid-api-key