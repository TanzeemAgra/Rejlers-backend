# REJLERS Django Backend Environment Variables Template
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Django Configuration
SECRET_KEY=your-super-secret-django-key-here-change-this-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development

# Database Configuration
DB_NAME=rejlers_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Alternative: Database URL (for platforms like Railway, Heroku)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@rejlers.com
SERVER_EMAIL=admin@rejlers.com
ADMIN_EMAIL=admin@rejlers.com

# SendGrid (Production Email Service)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS Configuration (for file storage)
USE_AWS_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=rejlers-media
AWS_S3_REGION_NAME=eu-north-1

# Frontend URLs (CORS configuration)
FRONTEND_URL=http://localhost:3000
STAGING_FRONTEND_URL=https://staging.rejlers.com
PRODUCTION_HOST=api.rejlers.com
STAGING_HOST=staging-api.rejlers.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ENVIRONMENT=development

# API Documentation
ENABLE_API_DOCS=True

# Business Configuration
ALLOW_REGISTRATION=True
REQUIRE_EMAIL_VERIFICATION=False

# Local Development Settings
USE_SQLITE=False
LOCAL_HOST=localhost

# Admin Configuration
ADMIN_URL=admin/

# Backup Configuration (Production)
BACKUP_S3_BUCKET=rejlers-backups

# Rate Limiting
RATELIMIT_ENABLE=False

# OpenAI API Configuration - AI Powered Features
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_ORGANIZATION=your-openai-org-id-optional

# Additional Service Keys (as needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# Development Tools
USE_DEBUG_TOOLBAR=True